<Window x:Class="IrodalomProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IrodalomProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="3*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>
		<DockPanel Grid.Column="0"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Background="LightGray">
			<Button DockPanel.Dock="Top"
                    Content="Betöltés"
                    Margin="5"
                    VerticalAlignment="Top"
                    Click="Betoltes_Click"/>
			<Button DockPanel.Dock="Bottom"
                    Content="Kilépés"
                    Margin="5"
                    Click="Kilepes_Click"/>
			<Button DockPanel.Dock="Top"
                    Content="Kiértékelés"
                    Margin="5"
                    Click="Kiertekeles_Click"/>
			<TextBlock Text="Eredmény"
                       Background="Beige"
                       x:Name="tbkEredmeny"/>
		</DockPanel>
		<TextBlock Grid.Column="1"
                   x:Name="tbkKerdesSzovege"/>
		<StackPanel Grid.Column="1"
                    Grid.Row="1">
			<RadioButton GroupName="Valaszok"
                         Name="ValaszA"
                         Margin="3"
                         Content="A)"/>
			<RadioButton GroupName="Valaszok"
                         Name="ValaszB"
                         Margin="3"
                         Content="B)"/>
			<RadioButton GroupName="Valaszok"
                         Name="ValaszC"
                         Margin="3"
                         Content="C)"/>
			<StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
				<Button Content="Előző"
                        Margin="5"
                        Padding="5"
                        Width="100"
                        Click="Elozo_Click"/>
				<Button Content="Válasz mentése"
                        Margin="5"
                        Padding="5"
                        Width="100"
                        Click="Mentes_Click"/>
				<Button Content="Következő"
                        Margin="5"
                        Padding="5"
                        Width="100"
                        Click="Kovetkezo_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
